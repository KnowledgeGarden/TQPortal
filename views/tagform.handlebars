<h1>Edit Tag</h1>
<hr>
<div class="tag-post col-xs-9">
              <form method="post" action="/tag"  role="form" class="form-horizontal">
                <input type="hidden" name="locator" value="{{locator}}">
                 <div class="form-group">
                  <label for="title" class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-10">
                    <input id="title" type="text" name="title" value="{{title}}" placeholder="Enter the title" class="form-control">
                  </div>
               </div>
               <div class="form-group">
                  <label for="desc" class="col-sm-2 control-label">Body</label>
                  <div class="col-sm-10">
                    <textarea i rows="5" name="body" placeholder="Enter the article description" class="form-control">{{body}}</textarea>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;<a href="/" title="cancel" class="btn">Cancel</a>
                  </div>
                </div>
              </form>
</div>
