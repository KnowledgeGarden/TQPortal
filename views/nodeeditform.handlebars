 <div class="blog-post col-xs-9">
      <form method="post" action="/updatenode"  role="form" class="form-horizontal"> 
        <input type="hidden" name="locator" value="{{locator}}">
       <div class="form-group">
          <label for="desc" class="col-sm-2 control-label">Node Source</label>
          <div class="col-sm-10">
            <textarea  rows="5" name="body" class="form-control">{{json}}</textarea>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Save</button>&nbsp;<a href="/" title="cancel" class="btn">Cancel</a>
          </div>
        </div>
      </form>
 </div>